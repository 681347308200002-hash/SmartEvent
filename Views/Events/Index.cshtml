@model IEnumerable<SmartEvent.Models.Event>

@{
    ViewData["Title"] = "Manage Events";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-dark">Manage Events</h1>
            <p class="text-muted">View and manage all your scheduled events</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm px-4">
            <i class="fas fa-plus me-2"></i> Create New Event
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary text-uppercase small fw-bold">
                    <tr>
                        <th style="width: 100px;" class="ps-4 py-3">Poster</th>
                        <th class="py-3">Event Name</th>
                        <th class="py-3">Category</th>
                        <th class="py-3">Date</th>
                        <th class="py-3">Location</th>
                        <th class="py-3">Price</th>
                        <th class="py-3" style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                @if (!string.IsNullOrWhiteSpace(item.PosterPath))
                                {
                                    <img src="@item.PosterPath" 
                                         alt="Poster" 
                                         class="rounded shadow-sm" 
                                         style="width: 60px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="rounded bg-light d-flex align-items-center justify-content-center text-muted border" 
                                         style="width: 60px; height: 60px;">
                                        <i class="fas fa-image"></i>
                                    </div>
                                }
                            </td>
                            <td class="fw-bold text-dark">@item.EventName</td>
                            <td><span class="badge bg-light text-dark border">@item.Category</span></td>
                            <td class="text-muted small">
                                <div class="fw-bold text-dark">@item.EventDate.ToString("MMM dd, yyyy")</div>
                                <div>@item.EventDate.ToString("HH:mm")</div>
                            </td>
                            <td class="text-muted"><i class="fas fa-map-marker-alt me-1 text-primary small"></i> @item.Location</td>
                            <td class="fw-bold text-primary">$@item.BasePrice.ToString("0.00")</td>
                            
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-outline-info" title="Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="SeatTypes" asp-action="Index" asp-route-eventId="@item.EventId" class="btn btn-sm btn-outline-secondary" title="Manage Seats">
                                            <i class="fas fa-chair"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="text-muted mb-3"><i class="fas fa-calendar-times fa-3x"></i></div>
                <h5 class="text-muted">No events found</h5>
                <a asp-action="Create" class="btn btn-link">Create your first event</a>
            </div>
        }
    </div>
</div>
