@model SmartEvent.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center py-4" style="border-radius: 0.8rem 0.8rem 0 0;">
                    <i class="fas fa-exclamation-triangle fa-3x mb-3 opacity-75"></i>
                    <h2 class="mb-0 fw-bold">Delete Event?</h2>
                    <p class="mb-0 opacity-75">Are you sure you want to delete this event?</p>
                </div>
                <div class="card-body p-4 text-center">
                    
                    <h3 class="fw-bold text-dark mb-1">@Model.EventName</h3>
                    <p class="text-muted mb-4">@Model.EventDate.ToString("MMMM dd, yyyy") at @Model.Location</p>

                    <div class="alert alert-light border mb-4 text-start">
                        <div class="d-flex justify-content-between mb-2">
                            <strong>Category:</strong>
                            <span>@Model.Category</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <strong>Price:</strong>
                            <span>$@Model.BasePrice.ToString("0.00")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <strong>Description:</strong>
                            <span class="text-truncate" style="max-width: 200px;">@Model.Description</span>
                        </div>
                    </div>

                    <p class="text-danger fw-bold small text-uppercase mb-4">
                        <i class="fas fa-info-circle me-1"></i> This action cannot be undone.
                    </p>

                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="EventId" />
                        <button type="submit" class="btn btn-danger btn-lg fw-bold shadow-sm">
                            <i class="fas fa-trash me-2"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-light btn-lg text-muted fw-bold">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
