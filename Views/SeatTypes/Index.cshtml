@model IEnumerable<SmartEvent.Models.SeatType>

@{
    ViewData["Title"] = "Seat Types";
    var eventId = ViewBag.EventId as int?;
}

<h1>Seat Types</h1>

@if (eventId != null)
{
    <p>
        <a asp-action="Create" asp-route-eventId="@eventId" class="btn btn-primary">Add Seat Type</a>
        <a asp-controller="Events" asp-action="Index" asp-route-id="@eventId" class="btn btn-secondary ms-2">Back to Event</a>
    </p>
}
else
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Type</th>
            <th>Price</th>
            <th>Quantity Available</th>
            <th>Event</th>
            <th style="width:180px;"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TypeName</td>
                <td>@item.Price.ToString("0.00")</td>
                <td>@item.QuantityAvailable</td>
                <td>@(item.Event?.EventName ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SeatTypeId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.SeatTypeId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.SeatTypeId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
