@model SmartEvent.Models.SeatType

@{
    ViewData["Title"] = "Edit Seat Type";
}

<h1>Edit Seat Type</h1>

<h4>Seat Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="SeatTypeId" />
            <input type="hidden" asp-for="EventId" />

            <div class="form-group mb-2">
                <label asp-for="TypeName" class="control-label"></label>
                <select asp-for="TypeName" class="form-control" asp-items="ViewBag.SeatTypeOptions"></select>
                <span asp-validation-for="TypeName" class="text-danger"></span>

            </div>

            <div class="form-group mb-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="QuantityAvailable" class="control-label"></label>
                <input asp-for="QuantityAvailable" class="form-control" />
                <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" asp-route-eventId="@Model.EventId" class="btn btn-secondary ms-2">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
