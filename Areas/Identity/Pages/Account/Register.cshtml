@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background: #f3f6fb;
    }
    .auth-card {
        max-width: 950px;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(44,62,80,0.12);
        margin: 40px auto;
    }
    .auth-left {
        background: #fff;
        padding: 2.5rem 2.5rem 2rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-height: 100%;
    }
    .auth-right {
        background: linear-gradient(135deg,#2563eb 0%, #1e40af 100%);
        color: #fff;
        padding: 2.5rem 2.5rem 2rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-height: 100%;
    }
    .auth-right h3 {
        color: #fff;
        font-weight: 700;
        font-size: 2rem;
    }
    .auth-right .small-note,
    .auth-right ul {
        color: #e0e7ef;
        font-size: 1.05rem;
    }
    .auth-right ul li {
        margin-bottom: 0.5rem;
        list-style: disc inside;
    }
    .form-floating.position-relative .form-control {
        padding-right: 90px;
    }
    .form-floating > label {
        color: #6c757d;
    }
    .password-toggle {
        top: 50%;
        transform: translateY(-50%);
        right: 12px;
        z-index: 3;
        padding: 4px 8px;
    }
    .small-note {
        font-size: .95rem;
        color: #6c757d;
    }
    .register-title {
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: #1e293b;
    }
    .register-subtitle {
        color: #64748b;
        margin-bottom: 2rem;
        font-size: 1.1rem;
    }
    .btn-primary {
        background: linear-gradient(90deg,#2563eb 0%, #1e40af 100%);
        border: none;
        font-weight: 600;
        font-size: 1.15rem;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: background 0.2s;
    }
    .btn-primary:hover, .btn-primary:focus {
        background: linear-gradient(90deg,#1e40af 0%, #2563eb 100%);
    }
    .form-control, .btn, .form-floating > label {
        border-radius: 8px;
    }
    .progress {
        background: #e5e7eb;
        border-radius: 6px;
    }
    .progress-bar {
        border-radius: 6px;
    }
    .alert-info {
        background: #e0f2fe;
        color: #0369a1;
        border: none;
        border-radius: 8px;
    }
    @@media (max-width: 991.98px) {
        .auth-card {
            flex-direction: column;
        }
        .auth-left, .auth-right {
            padding: 2rem 1.5rem;
        }
    }
    @@media (max-width: 767.98px) {
        .auth-card {
            margin: 0.5rem;
        }
        .auth-left, .auth-right {
            padding: 1.5rem 0.75rem;
        }
        .auth-right {
            order: 2;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-center align-items-center min-vh-75">
        <div class="d-flex flex-row auth-card w-100">
            <div class="col-md-6 auth-left">
                <div>
                    <div class="register-title">Create Account</div>
                    <div class="register-subtitle">Sign up to book tickets and manage your events easily.</div>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3 position-relative">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 position-relative">
                            <input asp-for="Input.Password" class="form-control password-field" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <button type="button" class="btn btn-outline-secondary btn-sm position-absolute password-toggle" data-target="Input_Password" aria-label="Toggle password visibility">Show</button>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 position-relative">
                            <input asp-for="Input.ConfirmPassword" class="form-control password-field" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <button type="button" class="btn btn-outline-secondary btn-sm position-absolute password-toggle" data-target="Input_ConfirmPassword" aria-label="Toggle password visibility">Show</button>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <div class="small text-muted mb-1">Password strength</div>
                            <div class="progress" style="height:8px;">
                                <div id="pwStrengthBar" class="progress-bar" role="progressbar" style="width:0%"></div>
                            </div>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Register</button>
                        <div class="mt-2 text-center">
                            <span class="small-note">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Sign in</a></span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6 auth-right">
                <div>
                    <h3 class="mb-2">Why join SmartEvent?</h3>
                    <ul>
                        <li>Book tickets for top events in seconds</li>
                        <li>Manage your bookings and event history</li>
                        <li>Easy social sign-in and secure authentication</li>
                        <li>Get event reminders and exclusive offers</li>
                    </ul>
                    <hr class="my-3" style="border-color: rgba(255,255,255,.15)" />
                    <div class="small-note mb-3">Or sign up with:</div>
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="alert alert-info p-2" role="alert">
                            <small>There are no external authentication services configured. See the <a class="text-decoration-underline" href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">setup guide</a>.</small>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-light border border-white mb-2" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                    Register with @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            document.querySelectorAll('.password-toggle').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var targetName = btn.getAttribute('data-target');
                    var input = null;
                    if (targetName) {
                        input = document.getElementById(targetName) || document.querySelector('[name="' + targetName.replace('_', '.') + '"]');
                    }
                    if (!input) {
                        var parent = btn.closest('.form-floating');
                        input = parent ? parent.querySelector('.password-field') : null;
                    }
                    if (!input) return;
                    if (input.type === 'password') {
                        input.type = 'text';
                        btn.textContent = 'Hide';
                    } else {
                        input.type = 'password';
                        btn.textContent = 'Show';
                    }
                });
            });

            var pwInput = document.querySelector('input[name="Input.Password"], #Input_Password');
            var strengthBar = document.getElementById('pwStrengthBar');

            function scorePassword(pw) {
                var score = 0;
                if (!pw) return 0;
                if (pw.length >= 8) score += 30;
                if (pw.length >= 12) score += 20;
                if (/[a-z]/.test(pw)) score += 15;
                if (/[A-Z]/.test(pw)) score += 15;
                if (/[0-9]/.test(pw)) score += 10;
                if (/[^A-Za-z0-9]/.test(pw)) score += 10;
                return Math.min(100, score);
            }

            function updateStrength() {
                var val = pwInput ? pwInput.value : '';
                var score = scorePassword(val);
                if (!strengthBar) return;
                strengthBar.style.width = score + '%';
                strengthBar.className = 'progress-bar';
                if (score < 40) {
                    strengthBar.classList.add('bg-danger');
                } else if (score < 70) {
                    strengthBar.classList.add('bg-warning');
                } else {
                    strengthBar.classList.add('bg-success');
                }
            }

            if (pwInput) {
                pwInput.addEventListener('input', updateStrength);
                updateStrength();
            }
        })();
    </script>
}